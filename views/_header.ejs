<section class="header-section">
    <div class="app-name">
        <a href="/"><h2 class="heading">Yourkart</h2></a>
    </div>
        <form class="search-bar">
            <input type="name" name="productname" placeholder="Search for products, brands and more">
            <i class="fas fa-magnifying-glass"></i>
        </form>
    <div class="sign-links">
        <% if(locals.user){ %>
             
            <div class="cart-section">
                <a href="/users/cartpage/<%= locals.user.id %>">
                    <button>
                        <i class="fas fa-shopping-cart"></i>
                            <span>Cart</span> 
                    </button>
                </a>
            </div>
            <div class="user-profile-btn dropdown">
                <div class="user-account dropbtn">
                    <span>My Account</span>
                    <i class="fas fa-angle-down"></i>
                    <i class="fas fa-caret-down caret-down"></i>
                    <div class="dropdown-content">
                        <p class="dropdown-item">
                            <a href="/users/profile">My Profile</a>
                        </p>
                        <p class="dropdown-item">
                            <a href="/users/sign-out">Sign out</a>
                        </p>
                    </div>
                </div>
            </div>
            <!-- <div class="sign-out-btn">
                <a href="/users/sign-out"><button>Signout</button></a>
            </div> -->
            
        <% }else{ %>
            <div class="cart-section">
                <a href="/users/sign-in"><button ><i class="fas fa-shopping-cart"></i>
                  <span>Cart</span>  
                </button></a>
            </div>
            <!-- <div class="sign-up-btn">
                <a href="/users/sign-up"> <button>Sign up</button> </a>
            </div>
            <div class="sign-in-btn">
                <a href="/users/sign-in"><button>Sign in</button></a>
            </div> -->
            <div class="sign-in-btn">
                <a href="/users/sign-in">Sign In</a>
            </div>

        <% } %>

    </div>
    

</section>