<link rel="stylesheet" href="/css/user_sign_up.css">
<div class="sign-up-page">
    <div class="sign-up-heading-container">
        <h1 class="sign-up-heading">Sign up</h1>
        <p class="user-features-copy">Get access to your Orders, Wishlist and Recommendations</p>
    </div>
    <div class="sign-up-form-container">
        <form action="/users/create" method="post">
        <input name="name" type="text" placeholder="your name" required>
        <input name="email" type="email" placeholder="your Email-id" required>
        <input name="password" type="password" placeholder="Password" required>
        <input name="confirm_password" type="password" placeholder="Confirm Password" required>
        <input type="submit" value="Sign up">
        <p class="already-account">
            <span>Already have an account?</span> 
            <a href="/users/sign-in">Log In</a>
        <p>
        </form>
    </div>
</div>